<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Login to YelpCamp</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/login" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="username">
				</div>
				<div class="form-group">
					<input class="form-control" type="password" name="password" placeholder="password">
				</div>
				<div class="form-group">
					<button class="btn btn-large btn-primary btn-block">Login</button>
				</div>
			</form>
			
			<div class="text-center">Don't have an account? <a href="/signup">Sign Up!</a> </div>
			<br>
			<div class="text-center"><a href="/campgrounds">Go back</a></div>
			
		</div>
	</div>
</div>
<% include ../partials/footer %>